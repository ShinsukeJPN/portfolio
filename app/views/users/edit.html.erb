<%= render 'shared/category' %>
<div class="col-lg-8">
  <% if flash[:notice] %>
  	<div class="flash_message">
  		<%= flash[:notice] %>
  	</div>
  <% end %>
		<div class="user_info">
			<div class="user_info_text">
				<h2>基本情報登録</h2>
					<div class="container">
						<div class="row">
   				    		<%= form_for(@user) do |f| %>
			    			<div class="col-lg-12">
								<%= attachment_image_tag @user,:image, class:"index_img", fallback: "No_img.jpg" %>
			    				<%= f.attachment_field :image %>
			    			</div>
						      <div class="col-lg-3">
						        <div class="form-group", style="margin-left:300px;">
						   		    <label class="control-label">Nickname</label><br>
						            <label class="control-label">Country</label><br>
					            	<label class="control-label">Age</label><br>
					            	<label class="control-label">Gender</label><br>
					            	<label class="control-label">Area</label>
					            </div>
					          </div>
				              <div class="col-lg-9">
						        <div class="form-group", style="margin-right:300px;">
						    		<%= f.text_field :nickname %><br>
			 					    <%= f.text_field :nationality %><br>
					            	<%= f.number_field :age, min:"18" %><br>
									<%= f.label :男性　%>	<%= f.radio_button :gender, :男性, checked: "checked" %>
									<%= f.label :女性 %><%= f.radio_button :gender, :女性 %>
						        	 <%= f.fields_for :user_areas do |au| %><br>
						        		<%= au.collection_select :area_id, Area.all, :id, :area_name %><br>
						        		<%= au.submit "いけ" %>
							         <% end %>
						            <%= f.submit "送信" %><br>
						    		<% end %>
				        	    </div>
				              </div>

				      </div>
					</div>
		</div>
	</div>
<!-- 部分テンプレート閉じタグ -->
</div>
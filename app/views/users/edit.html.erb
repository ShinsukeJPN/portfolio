<%= render 'shared/category' %>
	<div class="col-lg-8">
		<div class="user_info">
			<div class="user_info_text">
				<h3>基本情報登録</h3>
					<div class="container">
						<div class="row">
   				    		<%= form_for(@user) do |f| %>
						      <div class="col-sm-3">
						        <div class="form-group">
						   		    <label class="control-label">Image</label><br>
						   		    <label class="control-label">Nickname</label><br>
						            <label class="control-label">Country</label><br>
					            	<label class="control-label">Age</label><br>
					            	<label class="control-label">Gender</label><br>
					            </div>
					          </div>
				              <div class="col-xs-9">
						        <div class="form-group">
					            	<%= f.attachment_field :image %>
						    		<%= f.text_field :nickname %><br>
			 					    <%= f.text_field :nationality %><br>
					            	<%= f.number_field :age, min:"18" %><br>
									<%= f.label :男性　%>	<%= f.radio_button :gender, :男性, checked: "checked" %>
									<%= f.label :女性 %><%= f.radio_button :gender, :女性 %>
						            <%= f.submit "送信" %><br>
						    		<% end %>
				        	    </div>
				              </div>

				      </div>
					</div>
		</div>
	</div>
<!-- 部分テンプレート閉じタグ -->
</div>
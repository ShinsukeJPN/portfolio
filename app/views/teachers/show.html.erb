<%= render 'shared/category', user: @user, student: @student %>
<div class="col-lg-8">
	<% if @info.present? %>
	<div class="user_info">
		<div class="user_info_text">
		<h3><%= @teacher.user.nickname %>さんの先生情報</h3>
		</div>
		<div class="col-lg-5">
			<div class="user_img">
				<%= attachment_image_tag @teacher.user,:image %>
			</div>
		</div>
		<div class="col-lg-7">
			<table class="table table-striped">
			    <thead>
			      <tr>
			        <td><h6>値段</h6></td>
			        <td><%= @teacher.budget %>/ 1時間</td>
			      </tr>
			    </thead>
			    <tbody>
			      <tr>
			        <td>母国語</td>
			        <td><%= @teacher.first_language  %>
			      </tr>
			      <tr>
			      	<td>日本語レベル</td>
			      	<td><%= @teacher.japanese_level %></td>
			      </tr>
			      <tr>
			        <td>メッセージ</td>
			        <td><%= @teacher.message %></td>
			      </tr>
			    </tbody>
			 </table>
				<%= link_to edit_teacher_path(current_user) do %>
					<div class="btn btn-black">編集</div>
				<% end %>
		</div>
	<% else %>
		<div class="user_info">
		<div class="user_info_text">
			登録された生徒情報がありません。
			<%= link_to new_user_student_path(current_user) do %>
			<p>生徒情報登録</p>
			<% end %>
		</div>
		</div>
	<% end %>
</div>
<!-- container-fluid divタグ閉じ -->
</div>
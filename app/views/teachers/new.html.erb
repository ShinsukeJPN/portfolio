<%= render 'shared/category', user: @user, student: @student %>
<div class="col-lg-8">
  <% if flash[:notice] %>
  	<div class="flash_message">
  		<%= flash[:notice] %>
  	</div>
  <% end %>
		<div class="user_info">
			<div class="user_info_text">
				<h2>先生情報登録</h2>
					<div class="container">
						<div class="row">
   				    		<%= form_for(@teacher, url: user_teachers_path) do |f| %>
						      <div class="col-sm-3">
						        <div class="form-group">
						        	<label class="control-label">教える言語</label><br>
						   		    <label class="control-label">母国語</label><br>
						            <label class="control-label">値段</label><br>
						            <label class="control-label">日本語レベル</label><br>
					            	<label class="control-label">かんたんな経歴・メッセージなど</label><br>
					            </div>
					          </div>
				              <div class="col-xs-9">
						        <div class="form-group">
						        	<%= f.fields_for :language_teachers do |lt| %>
						        		<%= lt.collection_check_boxes(:language_id, Language.all, :id, :language_name, include_hidden: false) do |b| %>
						        		<%= b.label { b.check_box + b.text } %>
						        		<% end %>
						        		<%#= lt.collection_select :language_id, LanguageTeacher.all, :id, :language_level %>
						        	<% end %>
						        	<%= f.text_field :first_language %><br>
						        	<%= f.select :budget, {"1500円" => "1500", "2000円" => "2000", "2500円" => "2500", "3000円" => "3000" }, {}, {class: "btn btn-info dropdown-toggle"} %><br>
						        	<%= f.select :japanese_level,Teacher.japanese_levels.keys, {}, {class: "btn btn-info dropdown-toggle"} %><br>
						        	<%= f.text_field :need_to_bring %>
						    		<%= f.text_area :message %><br>
						    		<%= f.text_area :background %><br>
						    		<%= f.text_field :detailed_place_1 %><br>
						    		<%= f.text_field :detailed_place_2 %><br>
						    		<%= f.text_field :detailed_place_3 %><br>
						    		<%= f.text_areas :detailed_address_1 %><br>
						    		<%= f.text_areas :detailed_address_2 %><br>
						    		<%= f.text_areas :detailed_address_3 %><br>
						        	<%= f.hidden_field :user_id, :value => current_user.id %>
						            <%= f.submit "送信" %><br>
						    		<% end %>
				        	    </div>
				              </div>

				      </div>
					</div>
			</div>
		</div>
	</div>
<!-- 部分テンプレート閉じタグ -->
</div>
<%= render 'shared/category', user: @user, student: @student %>
<div class="col-lg-8">
	<div class="user_info">
		<div class="user_info_text">
			<h2>先生情報登録</h2>
		</div>
		<% if @teacher.errors.any? %>
		 　<script type="text/javascript">
		 　　<% @teacher.errors.full_messages.each do |f| %>
		　　　　　toastr['<%='error'%>']('<%=f %>');
		 　　<% end %>
		 <% end %>
		　　</script>
		<%= form_for(@teacher, url: user_teachers_path) do |f| %>
			<div class="container">
		   				    <div class="col-sm-8  col-sm-offset-2">
						        <div class="form-group">
			   				    		<div class="col-sm-3">
				   				    		<label>教える言語</label>
				   				    	</div>
				   				    	<div class="col-sm-9">
							        		<%= nested_form_for @teacher do |n| %>
								        		<%= n.fields_for :language_teachers do |lt| %>
									        		<%= lt.collection_select :language_id, Language.all, :id, :language_name %>
									         	  	<%= lt.link_to_remove "削除" %>
									        	<% end %>
										        <%= n.link_to_add "言語追加", :language_teachers %>
									        <% end %>
						    			</div>
				    			</div>
				    		</div>
				    		<div class="col-sm-8  col-sm-offset-2">
						        <div class="form-group">
			   				    		<div class="col-sm-3">
				   				    		<label>教えるその他の言語</label>
				   				    	</div>
				   				    	<div class="col-sm-9">
				    						<%= f.text_field :other_language, class: "form-control", placeholder:"例:タガログ、モンゴル", style: "width:300px; margin:0 auto;" %>
						    			</div>
				    			</div>
				    		</div>
		   				    <div class="col-sm-8  col-sm-offset-2">
						        <div class="form-group">
			   				    		<div class="col-sm-3">
				   				    		<label>母国語</label>
				   				    	</div>
				   				    	<div class="col-sm-9">
				        					<%= f.collection_select(:first_language, Language.all, :language_name, :language_name) %>
						    			</div>
				    			</div>
				    		</div>
		   				    <div class="col-sm-8  col-sm-offset-2">
						        <div class="form-group">
			   				    		<div class="col-sm-3">
				   				    		<label>値段</label>
				   				    	</div>
				   				    	<div class="col-sm-9">
				  					      	<%= f.select :budget, {"1500円" => "1500", "2000円" => "2000", "2500円" => "2500", "3000円" => "3000", "3500円" => "3500", "4000円" => "4000", "4500円" => "4500", "5000円" => "5000"} %>
						    			</div>
				    			</div>
				    		</div>
				    		<div class="col-sm-8  col-sm-offset-2">
						        <div class="form-group">
			   				    		<div class="col-sm-3">
				   				    		<label>生徒の持ち物</label>
				   				    	</div>
				   				    	<div class="col-sm-9">
								        	<%= f.text_field :need_to_bring, class: "form-control",style:"width:300px; margin:0 auto;" %>
						    			</div>
				    			</div>
				    		</div>
				    		<div class="col-sm-8  col-sm-offset-2">
						        <div class="form-group">
			   				    		<div class="col-sm-3">
				   				    		<label>日本語レベル</label>
				   				    	</div>
				   				    	<div class="col-sm-9">
				       					 	<%= f.select :japanese_level,Teacher.japanese_levels.keys %>
						    			</div>
				    			</div>
				    		</div>
				    		<div class="col-sm-8  col-sm-offset-2">
						        <div class="form-group">
			   				    		<div class="col-sm-3">
				   				    		<label>かんたんな経歴・メッセージなど</label>
				   				    	</div>
				   				    	<div class="col-sm-9">
				    						<%= f.text_area :message, class: "form-control", style:"width:300px; margin:0 auto;" %>
						    			</div>
				    			</div>
				    		</div>
				    		<div class="col-sm-8  col-sm-offset-2">
						        <div class="form-group">
			   				    		<div class="col-sm-3">
				   				    		<label>場所1</label>
				   				    	</div>
				   				    	<div class="col-sm-9">
											<label><%= f.text_field :detailed_place_1, style: "width:300px; margin:0 auto;", class: "form-control"%></label>
				   				    	</div>
				    			</div>
				    		</div>
				    		<div class="col-sm-8  col-sm-offset-2">
						        <div class="form-group">
			   				    		<div class="col-sm-3">
				   				    		<label>場所1の住所</label>
				   				    	</div>
				   				    	<div class="col-sm-9">
											<label><%= f.text_area :detailed_address_1, class: "form-control" %></label>
				   				    	</div>
				    			</div>
				    		</div>
				    		<div class="col-sm-8  col-sm-offset-2">
						        <div class="form-group">
			   				    		<div class="col-sm-3">
				   				    		<label>場所2</label>
				   				    	</div>
				   				    	<div class="col-sm-9">
											<label><%= f.text_field :detailed_place_2, style: "width:300px; margin:0 auto;", class: "form-control" %></label>
				   				    	</div>
				    			</div>
				    		</div>
				    		<div class="col-sm-8  col-sm-offset-2">
						        <div class="form-group">
			   				    		<div class="col-sm-3">
				   				    		<label>場所2の住所</label>
				   				    	</div>
				   				    	<div class="col-sm-9">
											<label><%= f.text_area :detailed_address_2, class: "form-control" %></label>
				   				    	</div>
				    			</div>
				    		</div>
				    		<div class="col-sm-8  col-sm-offset-2">
						        <div class="form-group">
			   				    		<div class="col-sm-3">
				   				    		<label>場所3</label>
				   				    	</div>
				   				    	<div class="col-sm-9">
											<label><%= f.text_field :detailed_place_3, style: "width:300px; margin:0 auto;", class: "form-control" %></label>
				   				    	</div>
				    			</div>
				    		</div>
				    		<div class="col-sm-8  col-sm-offset-2">
						        <div class="form-group">
			   				    		<div class="col-sm-3">
				   				    		<label>場所3の住所</label>
				   				    	</div>
				   				    	<div class="col-sm-9">
											<label><%= f.text_area :detailed_address_3, class: "form-control" %></label>
				   				    	</div>
				    			</div>
				        	<%= f.hidden_field :user_id, :value => current_user.id %>
				    		<%= f.submit "送信", class: "btn btn-black" %>
			          	</div>
			</div>
	 	<% end %>
	</div>
</div>
<!-- 部分テンプレート閉じタグ -->
</div>
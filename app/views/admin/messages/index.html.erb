<%= render 'shared/category' %>
    <div class="col-lg-8">
        <table class="table" style="margin-top:50px;">
            <thead>
                <tr>
                    <th> 送信ユーザID </th>
                    <th> メッセージ内容 </th>
                    <th> 送信日 </th>
                </tr>
            </thead>
            <tbody>
                <% @messages.each do |message| %>
                    <tr>
                        <% nickname = User.find(message.send_user_id).nickname %>
                        <td> <%= nickname %> </td>
                        <td> <%= message.comment %> </td>
                        <td> <%= message.created_at.strftime('%Y/%m/%d') %> </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>
<!-- 部分テンプレート閉じタグ -->
</div>
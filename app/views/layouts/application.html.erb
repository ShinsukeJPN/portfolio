  	<header>
	<div class="nav_box">
		<div class="about_logo_box">
				<%= link_to image_tag("logo_black.png", :class => 'about_logo'), root_path %>
		</div>
		<button class="btn btn-primary">Primary</button>
				<nav class="clearfix">
						<%= link_to "Find student", students_path %>
						<%= link_to "Find teacher", teachers_path %>
